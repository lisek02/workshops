.panel.panel-default
  .panel-heading
    %h3 Listing categories

  %table.table
    %tr
      %th Name
      %th
      %th
      %th

    - categories.each do |category|
      %tr
        %td= category.name
        %td= button_to 'Show', category, method: :get, class: 'btn btn-primary'
        %td= button_to 'Edit', edit_category_path(category), method: :get, class: 'btn btn-warning'
        %td= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= button_to 'New Category', new_category_path, method: :get, class: 'btn btn-default'
