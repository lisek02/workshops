.panel.panel-default
  .panel-heading
    %h3 Listing products

  %table.table
    %tr
      %th Title
      %th Description
      %th Price
      %th
      %th
      %th

    - products.each do |product|
      %tr
        %td= product.title
        %td= product.description
        %td= product.price
        %td
          %button.btn.btn-primary= link_to 'Show', category_product_path(product.category, product)
        %td
          %button.btn.btn-warning= link_to 'Edit', edit_category_product_path(product.category, product)
        %td
          %button.btn.btn-danger= link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }

%br
