%p#notice= notice
%p#error= flash[:error]

%table.table
  %tr
    %td Title:
    %td= product.title

  %tr
    %td Description:
    %td= product.description
  %tr
    %td Price:
    %td= product.price

  %tr
    %td Category
    %td= product.category.name

  %tr
    %td Average rating
    - if product.average_rating
      %td= product.average_rating.round(2)
    - else
      %td= 0

%p
  %b Reviews
  .bordered-form-review
    = render 'reviews/form'


= render reviews

= link_to 'Edit', edit_category_product_path(category.id, product.id)
\|
= link_to 'Back', category_products_path
